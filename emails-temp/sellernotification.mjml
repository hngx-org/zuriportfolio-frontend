<mjml>
  <mj-head>
    <mj-title>Buyer Notification</mj-title>
    <mj-font
      name="Manrope"
      href="https://fonts.googleapis.com/css2?family=Manrope:wght@200;300;400;500;600;700;800&display=swap"
    />

    <mj-attributes>
      <mj-text font-family="Manrope" font-size="16px" />
    </mj-attributes>
    <mj-style>
      .text-center { text-align: center; } .set-display{display: flex} .img-responsive .text-primary { color: #33a467; }
      .text-secondary { color: #f4fbf6; } .text-white { color: #fff; } .section-position {width: 80%; position:
      relative; top: 50%; transform: translateY(-22%); } .border-radius-top { border-radius: 10px 10px 0 0; }
      .width{width: 100%} .center-text { text-align: center; } @media (max-width: 480px) { .mobile-hidden { display:
      none !important; } .n-width { width: 100% !important; } } .confetti-bg { position: relative; background-color:
      #f4fef6; } .confetti-bg:before, .confetti-bg:after { content: ""; background-image:
      url('https://zuriportfolio-frontend-pw1h.vercel.app/assets/images/emails-temp/assessment/Confetti.png');
      background-repeat: repeat-y; background-size: contain; position: absolute; top: 0; bottom: 0; width: 50%; }
      .confetti-bg:before { left: 0; } .confetti-bg:after { right: 0; transform: scaleX(-1); }
    </mj-style>
  </mj-head>
  <mj-body background-color="#f4fbf6" width="1500px">
    <mj-section background-color="#33a467" css-class="set-nposition">
      <mj-column width="100%" padding="20px 0px 250px 0px">
        <mj-image
          src="https://zuriportfolio-frontend-pw1h.vercel.app/assets/images/emails-temp/assessment/Logo.png"
          alt="Logo"
          width="337px"
          height="64px"
        />
      </mj-column>
    </mj-section>

    <mj-section css-class="section-position" border-radius="10px" background-color="#fff" padding="0px 0 30px 0">
      <mj-group
        vertical-align="middle"
        width="100%"
        css-class="border-radius-top confetti-bg"
        background-color="#f4fef6"
      >
        <mj-column css-class="n-width" width="100%" vertical-align="middle">
          <mj-text
            background-color="#f4fbf6"
            align="center"
            color="#33a467"
            font-weight="900"
            font-size="18px"
            line-height="32px"
            css-class="center-text  banner-text"
          >
            <p>{{$service}}</p>
          </mj-text>
        </mj-column>
      </mj-group>

      <mj-column width="500px">
        <mj-image
          src="https://zuriportfolio-frontend-pw1h.vercel.app/assets/images/emails-temp/assessment/bro.png"
          alt="bro"
          width="160px"
        />
      </mj-column>

      <mj-column width="100%">
        <mj-text font-size="16px" line-height="24px">
          <p>Hi <span style="font-weight: bold">{{ $seller_name }}</span>,</p>
          <p>
            This is to notify you that
            <span style="font-weight: bold">{{ $buyer_name }}</span> has completed the
            <span style="font-weight: bold">{{ $service }} </span>
            internal assessment you assigned to them. Their results have been submitted to you for review.
          </p>

          <p>
            You can view their results and provide feedback by logging in to your account, click on the button below to
            login.
          </p>
        </mj-text>
      </mj-column>

      <mj-column width="100%">
        <mj-button
          href="https://zuriportfolio.com/login"
          border-radius="10px"
          background-color="#33a467"
          height="30px"
          width="160px"
          font-size="16px"
          >Login</mj-button
        >
      </mj-column>

      <mj-column width="100%">
        <mj-text font-size="16px" line-height="24px">
          <p>
            If you have any questions or need any assistance, please contact our support group at
            <a href="mailto:zurisupport@gmail.com" style="font-weight: bold; color: #000">zurisupport@gmail.com</a>
          </p>

          <p>Thank you for your hard work!</p>
          <p style="line-height: normal">
            Sincerely,<span style="display: block; color: #d7a068"> Zuriportfolio </span>
          </p>
        </mj-text>
      </mj-column>
    </mj-section>

    <mj-section background-color="#33a467">
      <mj-column width="600px">
        <mj-image
          src="https://zuriportfolio-frontend-pw1h.vercel.app/assets/images/emails-temp/assessment/n-logo.png"
          alt="Logo"
          width="150px"
          height="32px"
        />
      </mj-column>

      <mj-column width="100%">
        <mj-social font-size="24px" align="center">
          <mj-social-element name="instagram" href="https://www.instagram.com/hnginternship/" />
          <mj-social-element name="facebook" href="https://facebook.com/Hnginternship/"></mj-social-element>
          <mj-social-element name="twitter" href="https://twitter.com/hnginternship" />
          <mj-social-element name="linkedin" href="https://www.linkedin.com/company/hng-internship/" />
        </mj-social>

        <mj-text color="#fff" align="center">Beaverto, Oregon, Washington County, USA</mj-text>
        <mj-text color="#fff" align="center">Copyright Â© 2023 Zuriportfolio, All rights reserved.</mj-text>
        <mj-text align="center" color="#fff"><a href="#">Unsubscribe</a></mj-text>
      </mj-column>
    </mj-section>
  </mj-body>
</mjml>
