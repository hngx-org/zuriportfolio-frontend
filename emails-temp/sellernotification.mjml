      background-color="#fff"
      padding="0px 0 80px 0"
    >
      <mj-group background-color="#f4fef6" vertical-align="middle" width="100%" css-class="border-radius-top">
        <mj-column vertical-align="middle" css-class="mobile-hidden" width="33%">
          <mj-image width="120px" height="120px" padding="0" src="https://zuriportfolio-frontend-pwh1.vercel.app/assets/images/emails-temp/assessment/Confetti.png" />
        </mj-column>

        <mj-column css-class="n-width" vertical-align="middle">
